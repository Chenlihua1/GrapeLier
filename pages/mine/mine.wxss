/* pages/mine/mine.wxss */
page{
  background-color: #f0f0f0;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 30px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.user_name{
  color: #aaa;
  flex-direction: column;
  display: flex;
  align-items: left;
  margin-left: 10px
}
.menu{
  width: 88%;
  background-color: #fff;
  margin: 0px 14px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 10px;
  padding: 0px 10px;
}
.menu_name{
  padding: 10px 15px;
  font-size: 18px;
  font-weight: bolder;
}
.menu_sty{
  padding: 8px 0px
}
.pages-container {
  height: 90%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 10rpx;
  margin: 10px;

}
.pages-row {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-radius: 10px;
  margin: 2px;
}
 
.pages-item {
  position: relative;
  padding: 10rpx;
  width: 33%;
  background-color: #fff;
  border-radius: 10px;
  margin: 3px;
}
 
.pages-icon-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx;
  background-color: rgba(100, 236, 134, 0.301);
  border-radius: 10px;
}
 
.pages-icon-wrapper-no-bg {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx;
  background-color: rgba(100, 236, 134, 0.301);
  border-radius: 10px;
}
 
.pages-icon {
  width: 150rpx;
  height: 150rpx;
}
 
.pages-text-wrapper {
  text-align: center;
}