/* pages/advice/advice.wxss */
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 90rpx;}  
.swiper-tab-list{  font-size: 35rpx;  
    display: inline-block;  
    width: 50%;  
    color: #777777;  
}  
.on{ color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
}  
/**好友消息**/
.weui_cell {
	position: relative;
	display: flex;
	padding: 10px;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
	border-bottom: 1px solid #dadada;
}
 
.weui_cell_hd {
	display: inline-block;
	width: 50px;
	margin-right: 10px;
}
 
.weui_cell_hd image {
	width: 100%;
	height: 50px;
	vertical-align: -2px;
}
 
.weui_cell_bd {
	display: inline-block;
}
 
.weui_cell_bd_p {
	font-size: 16px;
	color: #939393;
}
 
.badge {
	position: absolute;
	right: 25px;
	width: 18px;
	height: 18px;
	line-height: 18px;
	background: #ff0000;
	color: #fff;
	border-radius: 50%;
	text-align: center;
	font-size: 10px;
}
